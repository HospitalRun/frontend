        <div role="tabpanel" class="tab-pane" id="investigate">
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            Investigation Findings : Narrative Statements from People Involved
                            {{#if canAddInvestigationFinding}}
                                <button class="btn btn-primary align-right" {{action "showAddInvestigationFinding" bubbles=false }}><span class="octicon octicon-plus"></span>New Investigation Finding</button>
                            {{/if}}
                        </h3>
                    </div>

                    <div class="panel-body detail-section-content">
                        <table class="table">
                            <tr class="table-header">
                                <th>Date Recorded</th>
                                <th>Type of Person Involved</th>
                                <th>Identity Document Type</th>
                                <th>Identity Number</th>
                                <th>Narrative Statement</th>
                                <th>Actions</th>
                            </tr>
                            {{#with this as parentController}}
                                {{#each investigationFindings}}
                                        <td>{{date-format dateRecorded}}</td>
                                        <td>{{typeOfPerson}}</td>
                                        <td>{{identityDocumentType}}</td>
                                        <td>{{identityNumber}}</td>
                                        <td>{{narrativeStatement}}</td>
                                        <td>
                                            {{#if parentController.canAddInvestigationFinding}}
                                                <button class="btn btn-default neutral" {{action "showEditInvestigationFinding" this}}>Edit</button>
                                            {{/if}}
                                            {{#if parentController.canDeleteInvestigationFinding}}
                                                <button class="btn btn-default warning" {{action "showDeleteInvestigationFinding" this  bubbles=false }}><span class="octicon octicon-x"></span> Delete</button>
                                            {{/if}}
                                        </td>
                                {{/each}}
                            {{/with}}
                        </table>
                    </div>
                </div>
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            Factors: Factors Contributing to the Incident
                            {{#if canAddImaging}}
                                <button class="btn btn-primary align-right" {{action "newImaging" bubbles=false }}><span class="octicon octicon-plus"></span> New Imaging</button>
                            {{/if}}
                        </h3>
                    </div>
                    <div class="panel-body detail-section-content">
                        <!--Checkbox
                        {{em-checkbox label=contributingFactorList.label property="contributingFactors.contributingFactorList.value"}}
                         -->
                        <label>Please tick the main Factor</label>
                            {{em-checkbox label="Patient Factor: E.g. Clinical Condition, Physical factors, Social factors, Psychological/Mental factors" property="contributingFactors.factor1"}}
                            {{em-checkbox label="Individual / Staff Factor: E.g. Physical issues, Psychological, Social, Domestic, Personality, Cognitive" property="contributingFactors.factor2"}}
                            {{em-checkbox label="Task Factor: E.g. Guidelines/ Procedures/ Protocols/ Task design" property="contributingFactors.factor3"}}
                            {{em-checkbox label="Communication Factor: E.g. Verbal, Written, Non-verbal, Handoff" property="contributingFactors.factor4"}}
                            {{em-checkbox label="Team Factor: E.g. Collaboration, Coordination, Leadership, Support" property="contributingFactors.factor5"}}
                            {{em-checkbox label="Working Condition factor: E.g. Environment, Staffing, Workload, Working Hours" property="contributingFactors.factor6"}}
                            {{em-checkbox label="Organizational Factor: E.g. Organizational structure, Policies, Priorities, Safety culture" property="contributingFactors.factor7"}}
                    </div>
                </div>
        </div>
        <div role="tabpanel" class="tab-pane" id="risk">
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            Harm Score
                        </h3>
                    </div>
                    {{#if canAddRisk}}
                        <div class="panel-body detail-section-content">
                            {{ext-radio name=harmScore content=harmScoreList value=harmScore }}
                        </div>
                    {{/if}}
                </div>
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            Risk Assesment
                       </h3>
                    </div>
                    {{#if canAddRisk}}
                    <div class="panel-body detail-section-content">
                            <label>Severity</label>
                            {{ext-radio name=preIncidentRiskAssesment.severity content=severityTypes 
                                        value=preIncidentRiskAssesment.severity radioLabelPath="content"
                                        radioValuePath="content"}}
                            <label>Occurrence</label>
                            {{ext-radio name=preIncidentRiskAssesment.occurence content=occurrenceTypes 
                                        value=preIncidentRiskAssesment.occurence radioLabelPath="content"
                                        radioValuePath="content"}}
                            <label>RISK SCORE = Severity x Occurrence</label>
                            {{ext-radio name=preIncidentRiskAssesment.riskScore content=riskScores 
                                        value=preIncidentRiskAssesment.riskScore radioLabelPath="content"
                                        radioValuePath="content"}}
                      </div>
                      <!--  <div class="panel-body detail-section-content">
                            <label>Severity</label>
                            {{ext-radio name=preSeverity content=severityTypes value=preSeverity radioLabelPath="content"
                                    radioValuePath="content"}}
                            <label>Occurrence</label>
                            {{ext-radio name=preOccurence content=occurrenceTypes value=preOccurence radioLabelPath="content"
                                    radioValuePath="content"}}
                            <label>RISK SCORE = Severity x Occurrence</label>
                            {{ext-radio name=preRiskScore content=riskScores value=preRiskScore radioLabelPath="content"
                                    radioValuePath="content"}}
                        </div>-->
                     {{/if}}
                </div>
        </div>
        <div role="tabpanel" class="tab-pane" id="recommendation">
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            Recommendations
                            {{#if canAddRecommendation}}
                                <button class="btn btn-primary align-right" {{action "showAddRecommendation" bubbles=false }}><span class="octicon octicon-plus"></span> New Recommendation</button>
                            {{/if}}
                        </h3>
                    </div>

                    <div class="panel-body detail-section-content">
                        <table class="table" >
                            <tr class="table-header">
                                <th>Activity/Plan</th>
                                <th>Responsibility</th>
                                <th>Start Date</th>
                                <th>Target Date of Completion</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                            {{#with this as patientController}}
                                {{#each recommendations}}
                                        <td>{{activity}}</td>
                                        <td>{{responsibility}}</td>
                                        <td>{{date-format startDate}}</td>
                                        <td>{{date-format targetDateOfCompletion}}</td>
                                        <td>{{status}}</td>
                                        <td>
                                            {{#if patientController.canAddRecommendation}}
                                                <button class="btn btn-default neutral" {{action "showEditRecommendation" this}}>Edit</button>
                                            {{/if}}
                                            {{#if patientController.canDeleteRecommendation}}
                                                <button class="btn btn-default warning" {{action "showDeleteRecommendation" this bubbles=false }}><span class="octicon octicon-x"></span> Delete</button>
                                            {{/if}}
                                        </td>
                                {{/each}}
                            {{/with}}
                        </table>
                    </div>
                </div>
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            Summary
                            {{#if canAddAppointment}}
                                <button class="btn btn-primary align-right" {{action "newAppointment" bubbles=false }}><span class="octicon octicon-plus"></span> New Appointment</button>
                            {{/if}}
                        </h3>
                    </div>
                    <div class="panel-body detail-section-content">
                        <table class="table">
                            <tr class="table-header">
                                <th>Date</th>
                                <th>Examiner</th>
                                <th>Location</th>
                                <th>Type</th>
                                <th>Actions</th>
                            </tr>
                            {{#with this as patientController}}
                                {{#each appointments itemController='appointments/item'}}
                                    <tr {{action "editAppointment" this}}>
                                        <td>{{appointmentDate}}</td>
                                        <td>{{provider}}</td>
                                        <td>{{location}}</td>
                                        <td>{{appointmentType}}</td>
                                        <td>
                                            {{#if patientController.canAddAppointment}}
                                                <button class="btn btn-default neutral" {{action "editAppointment" this}}>Edit</button>
                                            {{/if}}
                                            {{#if patientController.canDeleteAppointment}}
                                                <button class="btn btn-default warning" {{action "showDeleteAppointment" this  bubbles=false }}><span class="octicon octicon-x"></span> Delete</button>
                                            {{/if}}
                                        </td>
                                    </tr>
                                {{/each}}
                            {{/with}}
                        </table>
                    </div>
                </div>
        </div>
    </div>
{{/em-form}}