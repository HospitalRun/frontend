{{#modal-dialog isUpdateDisabled=isUpdateDisabled title=title updateButtonAction=updateButtonAction updateButtonText=updateButtonText}}
  {{#em-form model=model submitButton=false}}
    <div class="row">
      {{date-picker property="dateRecorded" label=(t 'incident.labels.date_recorded') class="col-sm-12" format="l h:mm A" showTime=true}}
    </div>
    <div class="row">
      {{date-picker property="startDate" label=(t 'incident.labels.start_date') class="col-sm-6" format="l h:mm A" showTime=true}}
      {{date-picker property="targetDateOfCompletion" label=(t 'incident.labels.target_date') class="col-sm-6" format="l h:mm A" showTime=true}}
    </div>
    <div class="row">
      {{em-select label=(t 'incident.labels.status') property="status" content=recommendationStatusTypes selected=model.status class="col-sm-12"}}
    </div>
    <div class="row">
      {{em-text property="activity" label=(t 'incident.labels.activity') class="col-sm-12"}}
    </div>
    <div class="row">
      {{em-text property="responsibility" label=(t 'incident.labels.responsibility') class="col-sm-12"}}
    </div>
    
  {{/em-form}}
{{/modal-dialog}}
