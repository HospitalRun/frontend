{{#modal-dialog
    isUpdateDisabled=isUpdateDisabled
    title=(t (if model.isNew 'admin.lookup.edit.add_title' 'admin.lookup.edit.edit_title'))
    updateButtonAction=updateButtonAction
    updateButtonText=(t (if model.isNew 'admin.lookup.edit.update_button_text_add' 'admin.lookup.edit.update_button_text_update'))}}
  {{#em-form model=model submitButton=false action="update" }}
    {{#if model.isLookupTypeNameValue}}
      {{em-input label=(t 'admin.lookup.edit.name') property="name" class="lookup-type-name"}}
    {{/if}}
    {{em-input label=(t 'admin.lookup.edit.value') property="value" class="lookup-type-value"}}
  {{/em-form}}
{{/modal-dialog}}
