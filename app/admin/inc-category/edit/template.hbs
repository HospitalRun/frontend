{{#edit-panel editPanelProps=editPanelProps}}
<div class="panel panel-primary">
    <div class="panel-body">
      {{#em-form model=model submitButton=false }}
        <div class="panel-heading">
          <h3 class="panel-title">
            Incident Category Name
          </h3>
          <div class="row">
             {{em-text property="incidentCategoryName" label="Category Name" }}
          </div>
        </div>
      {{/em-form}}
    </div>
</div>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">{{incidentCategoryName}}</h3>
    </div>
    <div class="panel-body">
        <table class="table">
            <tr class="table-header">
                <th>Item</th>
                <th>{{t 'labels.actions'}}</th>
            </tr>
            {{#each incidentCategoryItems as |incidentCategoryItem|}}
                <tr>
                    <td class="incident-category-item">{{incidentCategoryItem}}</td>
                    <td>
                        <button class="btn btn-default warning" {{action 'showDeleteItem' incidentCategoryItem bubbles=false }}><span class="octicon octicon-x"></span>Delete</button>
                    </td>
                </tr>
            {{/each}}
        </table>
    </div>
    <div class="panel-footer">
        <button class="btn btn-default neutral" {{action 'showAddItem'}}>Add Item</button>
    </div>
</div>
{{/edit-panel}}

